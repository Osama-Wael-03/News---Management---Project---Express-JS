<html lang="en">



<head>
  <%- include('../../adminPanel-components/head.ejs') %>
</head>

<body class="hold-transition sidebar-mini">
  <div class="wrapper">

    <!-- Navbar -->

    <%- include('../../adminPanel-components/nav-bar.ejs') %>


      <!-- /.navbar -->

      <!-- Main Sidebar Container -->

      <%- include('../../adminPanel-components/main-side-bar.ejs') %>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">

          <!-- Content Header (Page header) -->
          <%- include('../../adminPanel-components/content-header.ejs') %>
            <!-- /.content-header -->

            <!-----------------------------------------------The Changable Area--------------------------------------------------->

            <!-- Main content -->

            <section class="content">
              <div class="container-fluid">
                <div class="row">
                  <div class="col-md-12">
                    <div class="card">
                      <div class="card-header">
                        <h3 class="card-title">News Table</h3>
                      </div>
                      <!-- /.card-header -->
                      <div class="card-body">
                        <table class="table table-bordered table-hover table-striped">
                          <thead>
                            <tr>
                              <th style="width: 10px">#</th>
                              <th>News-Title</th>
                              <th>News-Description</th>
                              <th>Blocked</th>
                              <th>Category</th>
                              <th>Actions</th>
                            </tr>
                          </thead>
                          <% for(let iterator of news) { %>
                            <tr>
                              <td>
                                <%= iterator.news_id %>
                              </td>
                              <td>
                                <%= iterator.news_title %>
                              </td>
                              <td>
                                <%= iterator.news_description %>
                              </td>
                              <td>
                                <%= iterator.is_blocked %>
                              </td>
                              <td>
                                <%= iterator.Category.category_name %>
                              </td>
                              <td>
                                <form method="get" action="/cms/auth/admin/news/<%= iterator.news_id %>/edit">
                                  <div class="btn-group">
                                    <button type="submit" class="btn btn-warning btn-flat">
                                      <i class="fas fa-edit"></i>
                                    </button>
                                </form>

                                <form method="post" action="/cms/auth/admin/news/<%= iterator.news_id %>">
                                  <input type="hidden" name="_method" value="delete">
                                  <button type="submit" class="btn btn-danger btn-flat">
                                    <i class="fas fa-trash-alt"></i>
                                  </button>
                                </form>

                      </div>

                      </td>
                      </tr>
                      <% } %>
                        <tbody>



                        </tbody>

                        </table>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer clearfix">
                      <ul class="pagination pagination-sm m-0 float-right">
                        <li class="page-item"><a class="page-link" href="#">«</a></li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">»</a></li>
                      </ul>
                    </div>
                  </div>
                  <!-- /.card -->


                  <!-- /.card -->
                </div>
                <!-- /.col -->

                <!-- /.col -->
              </div>
              <!-- /.row -->

        </div><!-- /.container-fluid -->
        </section>

        <!-- /.content -->

        <!-------------------------------------------------------------------------------------------------------------------->

  </div>

  <%- include('../../adminPanel-components/footer.ejs') %>


    </div>

    <!-- jQuery -->
    <%- include('../../adminPanel-components/scripts.ejs') %>
</body>

</html>